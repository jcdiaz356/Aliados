<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginBottom="20dp"
    android:paddingBottom="10dp"
android:gravity="top|center_horizontal"
android:orientation="vertical"
>
<com.ornach.nobobutton.ViewButton
    android:id="@+id/icon_buttons_promotion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:nb_radius="0dp"
    app:nb_backgroundColor="@color/orange_500">
    <com.ornach.magicicon.IconButton
        android:id="@+id/ib_dowload"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_download"
        app:mi_backgroundColor="@color/orange_200"
        app:mi_iconColor="@color/white"
        app:mi_radius="0dp"
        />
    <TextView
        android:id="@+id/txt_buttons_promotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="start"
        android:padding="10dp"
        android:text="AAAAAAAAAAA"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


</com.ornach.nobobutton.ViewButton>
</LinearLayout>